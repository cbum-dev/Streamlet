# Next.js Configuration
NEXT_PUBLIC_APP_NAME="Streamlet"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Backend API URL
NEXT_PUBLIC_BACKEND_URL="http://localhost:3001"

# Authentication
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret"
NEXTAUTH_DEBUG="false"

# OAuth Providers (Google, GitHub, etc.)
NEXT_PUBLIC_GOOGLE_CLIENT_ID="your-google-client-id"
NEXT_PUBLIC_GITHUB_CLIENT_ID="your-github-client-id"

# WebSocket Configuration
NEXT_PUBLIC_WS_URL="ws://localhost:3001"

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS="true"
NEXT_PUBLIC_ENABLE_RECORDING="true"

# Sentry (Error Tracking)
NEXT_PUBLIC_SENTRY_DSN=""
NEXT_PUBLIC_SENTRY_ENVIRONMENT="development"

# Logging
NEXT_PUBLIC_LOG_LEVEL="info"

# RTMP Server URLs
NEXT_PUBLIC_RTMP_SERVER_URL="rtmp://localhost:1935/live"
NEXT_PUBLIC_HLS_SERVER_URL="http://localhost:8000/live"

# Video Player Configuration
NEXT_PUBLIC_DEFAULT_VIDEO_QUALITY="1080p"
NEXT_PUBLIC_ENABLE_QUALITY_SELECTOR="true"
